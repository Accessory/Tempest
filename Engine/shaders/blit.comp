  ivec2 texSize;
  } push;
*/

void main() {
  ivec2 index = ivec2(gl_GlobalInvocationID.xy);

  ivec2 i     = index*2;
  vec4  color = vec4(0.0);

  color+=imageLoad(src, i);
  color+=imageLoad(src, i+ivec2(0,1));
  color+=imageLoad(src, i+ivec2(1,0));
  color+=imageLoad(src, i+ivec2(1,1));

  imageStore(dst, index, color*0.25);
  }

#version 440

#if defined(RGBA8)
layout(binding=0, rgba8) uniform writeonly  image2D dst;
layout(binding=1, rgba8) uniform readonly   image2D src;
#elif defined(RGBA32F)
layout(binding=0, rgba32f) uniform writeonly image2D dst;
layout(binding=1, rgba32f) uniform readonly  image2D src;
#endif
/*
